<!DOCTYPE html>
<html lang="en">

<head>
  <title>Books</title>
</head>

<body>
  <h3>List books</h3>
  <% for (const book of books) { %>
    <p>Name: <%= book.name %>
    </p>
    <p>Price: <%= book.price %>
    </p>
    <p>Quantity: <%= book.quantity %>
    </p>
    <p>Author: <%= book.author %>
    </p>
    <button><a href="/book/detail?id=<%= book.id%>">Detail</a></button>
    <button><a href="/book/delete?id=<%= book.id%>">Delete</a></button>
   <% } %>
</body>

</html>
